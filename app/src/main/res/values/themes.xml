<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CookBook" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="android:statusBarColor">@color/main_color</item>

    </style>

    <style name="Theme.CookBook" parent="Base.Theme.CookBook" />

    //Custom TextInputLayout
    <style name="customTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox" >
        <item name="boxStrokeColor">@color/splash_button_color</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>>

    //Password text input custom layout
    <style name="customPasswordTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox" >
        <item name="boxStrokeColor">@color/splash_button_color</item>
        <item name="hintEnabled">false</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>>

    //Title text of textInput
    <style name="headlineTextInput" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    //App standart button
    <style name="regularButtonStyle_01" parent="Widget.AppCompat.Button">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    //Search view custom layout
    <style name="customSearchView" parent="TextAppearance.Material3.SearchView">
       <item name="android:elevation">2dp</item>
       <item name="android:background">@drawable/search_custom</item>
       <item name="android:layout_marginLeft">24dp</item>
       <item name="android:layout_marginTop">24dp</item>
       <item name="android:layout_marginRight">5dp</item>
       <item name="android:focusable">false</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">Search</item>
        <item name="android:queryBackground">@null</item>
    </style>

    //Title text custom layout
    <style name="textTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
    </style>

    <style name="subTextTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
    </style>

    <style name="minimalTextSub" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#8C000000</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
    </style>


    <style name="custom_bottom" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/main_color</item>
    </style>









</resources>